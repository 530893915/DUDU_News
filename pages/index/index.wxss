.page-bg{ 
overflow:hidden; 
position:fixed; 
margin: 0px; 
/*下面的是关键的设置100%显示*/ 
background-size: 100% 100%; 
width: 100%;
height: 100%;
z-index: -99;
opacity: 0.35;
} 

.Type-wrapper{
  width: 100%;
  height: 70rpx;
  background-color: #636363;
  display: flex;
  padding-top: 10rpx;
}

.Type-wrapper .news-type{
  font-size: 40rpx;
  line-height: 56rpx;
  padding-left: 25rpx;
  color: rgba(255, 255, 255, 0.733);
  /* text-shadow: white 0 0 30rpx; */
  padding-top: 5rpx;
}

.Type-wrapper .news-type:hover{
  color: rgb(236, 255, 247);
  text-shadow: black 0 0 10rpx;
  font-weight: bold;
}

.list-wrapper{
  display: flex;
  align-items: center;
  height: 175rpx;
  margin: 0 40rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.list-wrapper .left-wrapper{
  width: 450rpx;
  margin-right: 20rpx;
}

.list-wrapper .left-wrapper .new-title{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.8;
}

.list-wrapper .left-bottom-wrapper{
  font-size: 20rpx;
  line-height: 28rpx;
  opacity: 0.65;
  display: flex;
  margin-top: 20rpx;
}

.list-wrapper .left-bottom-wrapper .new-date{
  margin-left: 20rpx;
}

.list-wrapper .new-image{
  width: 200rpx;
  height: 126rpx;
}

/* 热门新闻样式 */
.list-wrapper:first-child{
  display: flex;
  align-items: flex-end;
  height: 300rpx;
  margin: 0 40rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  padding-bottom: 20rpx;
  position: relative;
}

.list-wrapper:first-child .left-wrapper{
  position: absolute;
  margin: 0 15rpx;
  color: white;
  z-index: 1;
}

.list-wrapper:first-child .new-image{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

